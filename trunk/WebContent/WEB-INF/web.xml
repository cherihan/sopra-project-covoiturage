<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>SopraCarPooling</display-name>
  <welcome-file-list>
    <welcome-file>Login</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>sopracarpooling.servlets.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>sopracarpooling.servlets.Home</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/Home</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/NotFoundError</location>
  </error-page>
  
  
  <!-- APPLICATION FILTER -->
  <filter>
    <filter-name>LoginUserOnly</filter-name>
    <filter-class>filters.LoginUserOnly</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginUserOnly</filter-name>
    <url-pattern>/Home</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginUserOnly</filter-name>
    <url-pattern>/Search</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginUserOnly</filter-name>
    <url-pattern>/RidesUpdate</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginUserOnly</filter-name>
    <url-pattern>/EditProfile</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AdminOnly</filter-name>
    <filter-class>filters.AdministratorOnly</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminOnly</filter-name>
    <url-pattern>/Administration</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminOnly</filter-name>
    <url-pattern>/DataManagement</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminOnly</filter-name>
    <url-pattern>/RidesManagement</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminOnly</filter-name>
    <url-pattern>/UserManagement</url-pattern>
  </filter-mapping>
  
  <filter>
  	<filter-name>VisitorOnly</filter-name>
    <filter-class>filters.VisitorOnly</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>VisitorOnly</filter-name>
    <url-pattern>/Login</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>VisitorOnly</filter-name>
    <url-pattern>/CreatAccount</url-pattern>
  </filter-mapping>
  
</web-app>